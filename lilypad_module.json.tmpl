{
"machine": {
      "gpu": 1,
      "cpu": 1000,
      "ram": 100
  },
  "job": {
    "APIVersion": "V1beta1",
    "Spec": {
      "Deal": {
        "Concurrency": 1
      },
      "Docker": {
       "Entrypoint": [
        "python", 
        "app.py",
        {{.SENTENCE}},
        {{.LANGUAGE}},
        {{.INPUT_FOLDER}},
        {{.OUTPUT_FOLDER}}
        ],
        "Image": "bringhi/synt@sha256:641ddb3150573cec35dcb62f9c492899e9758f07d6d698d8af8ac397b85e457f"
      },
      "Engine": "Docker",
      "Network": {
        "Type": "None"
      },
      "PublisherSpec": {
        "Type": "Estuary"
      },
      "Resources": {
        "GPU": "1"
      },
      "Timeout": 1800,
      "Verifier": "Noop",
      "inputs": [
          {
              "URL": {{.URL}},
              "Name": "fabri.wav",
              "StorageSource": "urlDownload",
              "path": "/inputs"
          }
      ],
      "outputs": [
          {
              "StorageSource": "IPFS",
              "Name": "outputs",
              "path": "/outputs"
          }
      ]
    }
  }
}

